/*
 * Device Tree file for Marvell Armada 7040 Pcac Development board platform
 */

#include "armada-7040.dtsi"

/ {
	model = "Marvell Armada 7040 PCAC board";
	compatible = "marvell,armada7040-pcac", "marvell,armada7040",
			"marvell,armada-ap806-quad", "marvell,armada-ap806";
	#address-cells = <2>;
	#size-cells = <2>;

	memory@00000000 {
		device_type = "memory";
		reg = <0x0 0x0 0x0 0x80000000>;
	};

	chosen { };

	ap806 {
		config-space {
			spi0: spi@510600 {
				status = "disabled";
			};
			serial@512000 {
				status = "okay";
			};
			i2c@511000 {
				status = "disabled";
				clock-frequency = <100000>;
			};
			sd_mmc_reg0: regulator@0 {
				gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
				gpios-states = <0>;
				states = <1800000 0x1
					3300000 0x0>;
				enable-active-high;
				status = "disabled";
			};
			sdhci@6e0000 {
				bus-width = <4>;
				no-1-8-v;
				non-removable; /* For now, need to configure the GPIO for card detect */
				status = "okay";
			};
		};
	};

	cpn-110-master {
		config-space {
			cpm_comphy: comphy {
				skip_pcie_power_off;
				status = "okay";
			};
			cpm_sata: sata@540000 {
				status = "okay";
				sata-port@0 {
					status = "disabled";
				};
				sata-port@1 {
					phys = <&cpm_comphy 5 COMPHY_SATA1>;
					phy-names = "comphy";
					status = "okay";
				};
			};
			cpm_i2c1: i2c@701100 {
				status = "disabled";
			};
			cpm_i2c0: i2c@701000 {
				status = "okay";
				clock-frequency = <100000>;
				pinctrl-names = "default";
				pinctrl-0 = <&i2c0_pins>;
				eeprom@57 {
					compatible = "at24,24c64";
					reg = <0x57>;
					pagesize = <32>;
				};
				eeprom@50 {
					compatible = "at24,24c64";
					reg = <0x50>;
					pagesize = <32>;
				};
				expander0: pca9555@21 {
					compatible = "nxp,pca9555";
					pinctrl-names = "default";
					gpio-controller;
					#gpio-cells = <2>;
					reg = <0x21>;
				};
			};
			cpm_usb3h1: usb3@510000 {
				separated-phys-for-usb2-usb3;
				phys = <&cpm_utmi1>;
				phy-names = "usb2";
				status = "okay";
			};
			spi@700680 {
				status = "okay";
				spi-flash@0 {
					#address-cells = <0x1>;
					#size-cells = <0x1>;
					compatible = "jedec,spi-nor";
					reg = <0x0>;
					spi-max-frequency = <20000000>;
					partition@0 {
						label = "boot";
						reg = <0x0 0x200000>;
					};
					partition@200000 {
						label = "recovery_image";
						reg = <0x200000 0x200000>;
					};
					partition@400000 {
						label = "Filesystem";
						reg = <0x400000 0xc00000>;
					};
				};
			};

			nand@720000 {
				nand-ecc-strength = <4>;
				nand-ecc-step-size = <512>;
				status = "disabled";
				partition@0 {
					label = "U-Boot";
					reg = <0 0x200000>;
				};
				partition@200000 {
					label = "Linux";
					reg = <0x200000 0xd00000>;
				};
				partition@1000000 {
					label = "Filesystem";
					reg = <0x1000000 0x3f000000>;
				};
			};

			mdio@12a200 {
				#address-cells = <1>;
				#size-cells = <0>;
				cpm_phy1: ethernet-phy@1 {
					reg = <1>;
				};
			};

			gop {
				cpm_emac0: mac0 {
					phy-mode = "sfi"; /* lane-4 */
					phys = <&cpm_comphy 4 COMPHY_SFI>;
					phy-names = "comphy";
				};
				cpm_emac2: mac2 {
					phy-mode = "rgmii"; /* lane-0 */
					phy = <&cpm_phy1>;
				};
				cpm_emac3: mac3 {
					phy-mode = "none"; /* rgmii-1 */
				};
			};
			ppv22@000000 {
				l4_chksum_jumbo_port = <0>;
				cpm_eth0: eth0@010000 {
					status = "okay";
				};
				cpm_eth1: eth1@020000 {
					status = "okay";
				};
				cpm_eth2: eth2@030000 {
					status = "disabled";
				};
			};

			cpm_utmi1: utmi@581000 {
				status = "okay";
			};
		};

		pci-ep-uio {
			compatible = "marvell,pci-ep-uio";
			reg = <0 0 0 0x100000>, <0x80 0x00000000 0x1 0x000000000>;
			reg-names = "bar0", "host-map";
			device-id = <0x7080>;
			class-code = <0x2>;
			subclass-code = <0x0>;
			status = "okay";
		};

		pcie-ep@600000 {
			status = "okay";
		};
	};
};
