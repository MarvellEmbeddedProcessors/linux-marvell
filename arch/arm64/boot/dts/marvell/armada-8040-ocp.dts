/*
 * Device Tree file for OCP Armada 8040 board platform
 */

#include "armada-8040.dtsi"

/ {
	model = "Armada 8040 OCP";
	compatible = "marvell,armada8040-ocp", "marvell,armada8040",
			"marvell,armada-ap806-quad", "marvell,armada-ap806";

	memory@00000000 {
		device_type = "memory";
		reg = <0x0 0x0 0x0 0x80000000>;
	};

	aliases {
		ethernet0 = &cp0_emac0;
		ethernet1 = &cp1_emac0;
	};

	ap806 {
		config-space {
			serial@512000 {
				status = "okay";
			};
			sdhci@6e0000 {
				vqmmc-supply = <&vccq_mmc_reg>;
				bus-width = <8>;
				no-1-8-v;
				non-removable;
				marvell,xenon-emmc;
				pinctrl-names = "default";
				pinctrl-0 = <&ap_emmc_pins>;
				status = "okay";
			};
			vccq_mmc_reg: regulator@0 {
				compatible = "regulator-fixed";
				regulator-name = "vccq-mmc-reg";
				regulator-min-microvolt = <3300000>;
				regulator-max-microvolt = <3300000>;
				regulator-always-on;
				status = "okay";
			};
		};
	};

	cp0 {
		config-space {
			pinctrl@440000 {
				xhci0_vbus_pins: xhci0-vbus-pins {
					marvell,pins = "mpp47";
					marvell,function = "gpio";
				};
			};
			cp0_comphy: comphy {
				skip_pcie_power_off;
			};
			i2c@701000 {
				clock-frequency = <100000>;
				pinctrl-names = "default";
				pinctrl-0 = <&cp0_i2c0_pins>;
				status = "disabled";
			};
			gop {
				cp0_emac0: mac0 {
					phys = <&cp0_comphy 4 COMPHY_SFI>;
					phy-names = "comphy";
					phy-mode = "sfi"; /* lane-4 */
				};
				cp0_emac2: mac2 {
					phy-mode = "none";
				};
				cp0_emac3: mac3 {
					phy-mode = "none";
				};
			};
			ppv22@000000 {
				l4_chksum_jumbo_port = <0>;
				pinctrl-names = "default";
				cp0_eth0: eth0@010000 {
					status = "okay";
				};
			};
			reg_usb3h0_vbus: usb3-vbus0 {
				compatible = "regulator-fixed";
				pinctrl-names = "default";
				pinctrl-0 = <&xhci0_vbus_pins>;
				regulator-name = "reg-usb3h0-vbus";
				regulator-min-microvolt = <5000000>;
				regulator-max-microvolt = <5000000>;
				enable-active-high;
				gpio = <&cp0_gpio1 15 GPIO_ACTIVE_HIGH>;
				status = "okay";
			};
		};

		pci-ep-uio {
			compatible = "marvell,pci-ep-uio";
			reg = <0 0 0 0x100000>, <0x80 0x00000000 0x8 0x000000000>;
			reg-names = "bar0", "host-map";
			device-id = <0x7080>;
			class-code = <0x2>;
			subclass-code = <0x0>;
			status = "okay";
		};

		pcie-ep@600000 {
			status = "okay";
		};
	};

	cp1 {
		config-space {
			/* cp1_usb3h0 is USB2 only (UTMI) */
			cp1_usb3h0: usb3@500000 {
				usb-phy = <&cp1_usb3h0_phy>;
				phys = <&cp1_utmi0>;
				phy-names = "usb";
				status = "okay";
			};
			cp1_usb3h0_phy: usb3_phy0 {
				compatible = "usb-nop-xceiv";
				vcc-supply = <&reg_usb3h0_vbus>;
			};
			cp1_utmi0: utmi@580000 {
				status = "okay";
			};
			gop {
				cp1_emac0: mac0 {
					phys = <&cp1_comphy 4 COMPHY_SGMII0>;
					phy-names = "comphy";
					phy-mode = "sgmii"; /* lane-4 */
				};
				cp1_emac2: mac2 {
					phy-mode = "none";
				};
				cp1_emac3: mac3 {
					phy-mode = "none";
				};
			};
			ppv22@000000 {
				l4_chksum_jumbo_port = <0>;
				pinctrl-names = "default";
				cp1_eth0: eth0@010000 {
					status = "okay";
				};
				cp1_eth1: eth1@020000 {
					status = "disabled";
				};
				cp1_eth2: eth2@030000 {
					status = "disabled";
				};
			};
		};
	};
};

