/*
 * Example device tree for Armada 7040
 * Customer may use this file as a reference.
 * Each field that needs to be update (phys, mpps, addresses, frequencies)
 * is marked with "UPDATE" comment.
 *
 * NOTE: all interfaces are disabled!
 *
 * Refer to ./Documentation/mvebu/porting_guide.txt for for information
 */

/* UPDATE
 * Include one of the following dtsi files:
 *	armada-7040.dtsi - used for quad core
 *	armada-7020.dtsi - used for dual core
 */
#include "armada-7040.dtsi"

/ {
	/* UPDATE */
	model = "customer board model";
	/* UPDATE
	 * marvell,armada-ap806-quad - used for quad core
	 * marvell,armada-ap806-dual - used for dual core
	 * NOTE: The compatile MUST match the included *.dtsi file
	 */
	compatible = "customer-board-compatible", "marvell,armada7040",
		     "marvell,armada-ap806-quad", "marvell,armada-ap806";
	#address-cells = <2>;
	#size-cells = <2>;

	aliases {
		gpio1 = &cpm_gpio0;
		gpio2 = &cpm_gpio1;
	};

	/* UPDATE */
	memory@00000000 {
		device_type = "memory";
		reg = <0x0 0x0 0x0 0x80000000>;
	};

	ap806 {
		config-space {
			sdhci@6e0000 {
				status = "disabled";
			};
			serial@512000 {
				status = "disabled";
			};
			i2c@511000 {
				status = "disabled";
				/* UPDATE */
				clock-frequency = <100000>;
			};
			sd_mmc_reg0: regulator@0 {
			/* UPDATE */
				gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
				gpios-states = <0>;
				states = <1800000 0x1 3300000 0x0>;
				enable-active-high;
				status = "disabled";
			};
			sdhci@6e0000 {
				/* UPDATE */
				bus-width = <4>;
				no-1-8-v;
				non-removable;
			};
		};
	};

	cpn-110-master {
		config-space {
			pinctrl@440000 {
				u3d_vbus_pins: pca0_pins {
					marvell,pins = "mpp62";
					marvell,function = "gpio";
				};
			};
			serial@702000 {
				status = "disabled";
			};
			serial@702100 {
				status = "disabled";
			};
			serial@702200 {
				status = "disabled";
			};
			serial@702300 {
				status = "disabled";
			};
			sata: sata@540000 {
				status = "disabled";

				sata-port@0 {
					/* UPDATE */
					phys = <&comphy0 1 COMPHY_SATA0>;
					phy-names = "comphy";
					status = "disabled";
				};
				sata-port@1 {
					/* UPDATE */
					phys = <&comphy0 3 COMPHY_SATA1>;
					phy-names = "comphy";
					status = "disabled";
				};
			};
			usb3h0: usb3@500000 {
				status = "disabled";
			};
			usb3h1: usb3@510000 {
				status = "disabled";
			};
			u3d@520000 {
				/* UPDATE */
				pinctrl-0 = <&u3d_vbus_pins>;
				pinctrl-names = "default";
				vbus-gpio = <&cpm_gpio1 30 GPIO_ACTIVE_HIGH>;
				status = "disabled";
			};
			udc@524100 {
				status = "disabled";
			};
			sdhci@780000 {
				status = "disabled";
			};
			nand@720000 {
				/* UPDATE */
				nand-ecc-strength = <4>;
				nand-ecc-step-size = <512>;
				status = "disabled";
				partition@0 {
					label = "U-Boot";
					reg = <0 0x200000>;
				};
				partition@200000 {
					label = "Linux";
					reg = <0x200000 0xd00000>;
				};
				partition@1000000 {
					label = "Filesystem";
					reg = <0x1000000 0x3f000000>;
				};
			};
			spi@700680 {
				status = "disabled";
				/* UPDATE */
				spi-flash@0 {
					#address-cells = <0x1>;
					#size-cells = <0x1>;
					compatible = "jedec,spi-nor";
					reg = <0x0>;
					spi-max-frequency = <20000000>;
					partition@0 {
						label = "boot";
						reg = <0x0 0x200000>;
					};
					partition@200000 {
						label = "Filesystem";
						reg = <0x200000 0xd00000>;
					};
					partition@d00000 {
						label = "boot_2nd";
						reg = <0xf00000 0x100000>;
					};
				};
			};
			i2c1: i2c@701000 {
				status = "disabled";
				/* UPDATE */
				clock-frequency = <100000>;
				pinctrl-names = "default";
				pinctrl-0 = <&i2c0_pins>;
				eeprom@57 {
					/* UPDATE */
					compatible = "at24,24c64";
					reg = <0x57>;
					pagesize = <32>;
				};
				eeprom@50 {
					/* UPDATE */
					compatible = "at24,24c64";
					reg = <0x50>;
					pagesize = <32>;
				};
				expander0: pca9555@21 {
					/* UPDATE */
					compatible = "nxp,pca9555";
					pinctrl-names = "default";
					gpio-controller;
					#gpio-cells = <2>;
					reg = <0x21>;
				};
			};
			i2c2: i2c@701100 {
				status = "disabled";
			};

			mdio@12a200 {
				#address-cells = <1>;
				#size-cells = <0>;
				/* UPDATE */
				phy2: ethernet-phy@2 {
					reg = <0>;
				};
				phy3: ethernet-phy@3 {
					reg = <1>;
				};
			};
			gop {
				emac0: mac0 {
					/* UPDATE */
					phy-mode = "sgmii"; /* lane-2 */
					phys = <&comphy0 2 COMPHY_SGMII0>;
					phy-names = "comphy";
				};
				emac2: mac2 {
					/* UPDATE */
					phy-mode = "sgmii"; /* lane-0 */
					phy = <&phy2>;
					phys = <&comphy0 0 COMPHY_SGMII1>;
					phy-names = "comphy";
				};
				emac3: mac3 {
					/* UPDATE */
					phy-mode = "rgmii"; /* rgmii-1 */
					phy = <&phy3>;
				};
			};
			ppv22@000000 {
				eth0: eth0@010000 {
					status = "disabled";
				};
				eth1: eth1@020000 {
					status = "disabled";
				};
				eth2: eth2@030000 {
					status = "disabled";
				};
			};
			comphy {
				status = "disabled";
			};
		};
		pcie@0x600000 {
			status = "disabled";
			/* UPDATE */
			num-lanes = <4>;
		};
		pcie@0x620000 {
			status = "disabled";
		};
		pcie@0x640000 {
			status = "disabled";
		};
	};

	usb3h0_phy: usb3-h0-phy {
		/* UPDATE */
		compatible = "usb-nop-xceiv";
		/* vcc-supply can be changed by io-expander or GPIO,
		 * for A7040-DB we are using by default io-expander
		 * for other board GPIO may be needed, should update
		 * the phandle to gpio regulator
		 */
		vcc-supply = <&exp_usb3h0_vbus>;
	};
	usb3h1_phy: usb3-h1-phy {
		compatible = "usb-nop-xceiv";
		vcc-supply = <&exp_usb3h1_vbus>;
	};
	exp_usb3h0_vbus: usb3-0-vbus {
		compatible = "regulator-fixed";
		/* UPDATE */
		regulator-name = "usb3-0-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
		regulator-always-on;
		gpio = <&expander0 0 GPIO_ACTIVE_HIGH>;
	};
	exp_usb3h1_vbus: usb3-1-vbus {
		compatible = "regulator-fixed";
		/* UPDATE */
		regulator-name = "usb3-1-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
		regulator-always-on;
		gpio = <&expander0 1 GPIO_ACTIVE_HIGH>;
	};
	/* following GPIO entry is not used (for reference only)
	 * GPIO is not connected in default A7040-DB board
	 */
	gpio_usb3_vbus: usb3-gpio-vbus {
		compatible = "regulator-fixed";
		/* UPDATE */
		pinctrl-names = "default";
		pinctrl-0 = <&xhci0_vbus_pins>;
		regulator-name = "xhci0-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
		gpio = <&cpm_gpio0 12 GPIO_ACTIVE_HIGH>;
		status = "disabled";
	};
};
